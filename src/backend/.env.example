# Flask
FLASK_ENV=development
API_PORT=8000
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Feature toggles
ENABLE_SOURCES=news,reddit

# Limits
DEFAULT_WINDOW_HOURS=24
MAX_UPLOAD_ROWS=10000
MAX_TEXT_LENGTH=5000

# External APIs
NEWS_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=finance-sentiment-dashboard/0.1

# Model / Inference
# By default we use a lightweight Mock service for local dev & tests.
# Set USE_MOCK_MODEL=0 or false to load the real HuggingFace model.
USE_MOCK_MODEL=true

# HF model name to use when USE_MOCK_MODEL=false
# Examples:
#  - yiyanghkust/finbert-tone
#  - ProsusAI/finbert
MODEL_NAME=yiyanghkust/finbert-tone

# Device selection for the transformers pipeline:
# - "cpu" or "-1" -> CPU
# - "auto" -> pick GPU if available
# - "cuda:0" or "0" -> GPU index 0
MODEL_DEVICE=cpu

# Default batch size for model inference
MODEL_BATCH_SIZE=16
